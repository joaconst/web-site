---
import "../styles/global.css";
---

<section id="services" class="py-16 md:py-24 px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12 md:mb-20">
        <h2 class="text-3xl md:text-4xl font-bold text-mate mb-4">
            Our Digital Services at Your Reach
        </h2>
    </div>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
        <div
            class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300"
        >
            <div class="relative">
                <img
                    src="https://plus.unsplash.com/premium_photo-1678565879444-f87c8bd9f241?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                    alt="Custom Web Development"
                    class="w-full h-48 object-cover"
                    loading="lazy"
                />
                <div class="absolute inset-0 bg-ext/20"></div>
            </div>
            <div class="p-6">
                <h3 class="text-xl font-semibold text-mate mb-2">
                    Custom Web Development
                </h3>
                <p class="text-gray-600 mb-4">
                    We create modern, functional websites adapted to your needs.
                </p>
                <a
                    href="services/webDevelopment"
                    class="inline-block px-4 py-2 bg-secondary text-white rounded-lg font-medium hover:bg-primary transition-colors"
                >
                    More
                </a>
            </div>
        </div>

        <div
            class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300"
        >
            <div class="relative">
                <img
                    src="https://images.unsplash.com/photo-1516321497487-e288fb19713f?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                    alt="Digital Presence and Branding"
                    class="w-full h-48 object-cover"
                    loading="lazy"
                />
                <div class="absolute inset-0 bg-ext/20"></div>
            </div>
            <div class="p-6">
                <h3 class="text-xl font-semibold text-mate mb-2">
                    Digital Presence and Branding
                </h3>
                <p class="text-gray-600 mb-4">
                    We design your digital identity to stand out in the market.
                </p>
                <a
                    href="services/presenceAndBranding"
                    class="inline-block px-4 py-2 bg-secondary text-white rounded-lg font-medium hover:bg-primary transition-colors"
                >
                    More
                </a>
            </div>
        </div>

        <div
            class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300"
        >
            <div class="relative">
                <img
                    src="https://images.unsplash.com/photo-1517245386807-bb43f82c33c4?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                    alt="Digital Marketing Strategy"
                    class="w-full h-48 object-cover"
                    loading="lazy"
                />
                <div class="absolute inset-0 bg-ext/20"></div>
            </div>
            <div class="p-6">
                <h3 class="text-xl font-semibold text-mate mb-2">
                    Digital Marketing Strategy
                </h3>
                <p class="text-gray-600 mb-4">
                    We boost your growth with personalized campaigns.
                </p>
                <a
