---
import "../styles/global.css";

const { lang = "en", ...attrs } = Astro.props;
---

<nav
  class="fixed w-full bg-background/80 backdrop-blur-md shadow-sm z-50"
  {...attrs}
>
  <div class="mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16 md:h-20">
      <a href="/" class="flex-shrink-0">
        <div
          class="h-8 w-32 bg-primary rounded-lg flex items-center justify-center font-bold text-white text-xl"
        >
          Logo
        </div>
      </a>

      <div class="hidden md:flex items-center space-x-6">
        <a
          href="/index.html#home"
          class="text-gray-600 hover:text-primary transition-colors font-medium underline-hover"
        >
          Home
        </a>
        <a
          href="/index.html#about"
          class="text-gray-600 hover:text-primary transition-colors font-medium underline-hover"
        >
          About
        </a>
        <a
          href="/index.html#services"
          class="text-gray-600 hover:text-primary transition-colors font-medium underline-hover"
        >
          Services
        </a>
        <a
          href="/contact"
          class="text-gray-600 hover:text-primary transition-colors font-medium underline-hover"
        >
          Contact
        </a>
      </div>

      <button
        id="mobile-menu-button"
        class="md:hidden p-2 rounded-md text-gray-600 hover:bg-gray-100 hover:text-gray-800 focus:outline-none focus:ring-2 focus:ring-mate"
      >
        <span class="sr-only">Open menu</span>
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </div>

  <div
    id="mobile-menu"
    class="md:hidden absolute hidden w-full bg-white shadow-lg origin-top animate-fadeIn"
  >
    <div class="px-4 pt-2 pb-3 space-y-1">
      <a
        href="/index.html#home"
        class="block px-3 py-2 text-gray-600 hover:bg-gray-50 rounded-md"
        >Home</a
      >
      <a
        href="/index.html#about"
        class="block px-3 py-2 text-gray-600 hover:bg-gray-50 rounded-md"
        >About</a
      >
      <a
        href="/index.html#services"
        class="block px-3 py-2 text-gray-600 hover:bg-gray-50 rounded-md"
        >Services</a
      >
      <a
        href="/contact"
        class="block px-3 py-2 text-gray-600 hover:bg-gray-50 rounded-md"
        >Contact</a
      >
    </div>
  </div>

  <script is:inline>
    const mobileMenuButton = document.getElementById("mobile-menu-button");
    const mobileMenu = document.getElementById("mobile-menu");

    mobileMenuButton.addEventListener("click", (e) => {
      e.stopPropagation();
      mobileMenu.classList.toggle("hidden");
      mobileMenu.classList.toggle("block");

      if (mobileMenu.classList.contains("block")) {
        mobileMenu.style.animation = "fadeIn 0.3s ease-out";
      } else {
        mobileMenu.style.animation = "fadeOut 0.3s ease-out";
      }
    });

    document.addEventListener("click", (event) => {
      if (window.innerWidth < 768) {
        if (mobileMenu.classList.contains("block")) {
          if (
            !mobileMenu.contains(event.target) &&
            !mobileMenuButton.contains(event.target)
          ) {
            mobileMenu.classList.remove("block");
            mobileMenu.classList.add("hidden");
            mobileMenu.style.animation = "fadeOut 0.3s ease-out";
          }
        }
      }
    });

    document.querySelectorAll("#mobile-menu a").forEach((link) => {
      link.addEventListener("click", () => {
        const mobileMenu = document.getElementById("mobile-menu");
        mobileMenu.classList.remove("block");
        mobileMenu.classList.add("hidden");
        mobileMenu.style.animation = "fadeOut 0.3s ease-out";
      });
    });
  </script>

  <style>
    .underline-hover::after {
      content: "";
      display: block;
      height: 3px;
      width: 0;
      background-color: #d6c0b3;
      transition: width 0.4s ease;
    }
    .underline-hover:hover::after {
      width: 100%;
    }
  </style>
</nav>
